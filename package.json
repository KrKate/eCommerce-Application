{
  "name": "ecommerce-application",
  "version": "0.0.0",
  "private": true,
  "author": "Team Sloths: Ekaterina Kiryanova, Kirill Demyanenko, Victoria Rossiyskaya",
  "description": "An amazing ecommerce application for online shopping",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore --color",
    "format": "prettier --write src/",
    "prepare": "husky install",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "my-lint-staged": "lint-staged --relative"
  },
  "dependencies": {
    "@vueform/multiselect": "^2.6.2",
    "axios": "^1.4.0",
    "bootstrap-icons": "^1.10.5",
    "pinia": "2.1.4",
    "swiper": "^10.2.0",
    "vue": "3.3.4",
    "vue-3-breadcrumbs": "^2.0.0",
    "vue-multiselect": "^2.1.7",
    "vue-router": "4.2.4"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "1.3.2",
    "@tsconfig/node18": "18.2.0",
    "@types/node": "^18.17.15",

    "@typescript-eslint/eslint-plugin": "6.2.1",
    "@typescript-eslint/parser": "6.2.1",
    "@vitejs/plugin-vue": "4.2.3",
    "@vitest/coverage-v8": "^0.34.2",
    "@vue/eslint-config-prettier": "8.0.0",
    "@vue/eslint-config-typescript": "11.0.3",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "0.4.0",
    "eslint": "8.46.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-plugin-import": "2.28.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-vue": "9.16.1",
    "happy-dom": "^10.11.2",
    "husky": "8.0.3",
    "lint-staged": "^13.2.3",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.1",
    "sass": "1.64.2",
    "sass-loader": "13.3.2",
    "typescript": "5.1.6",
    "vite": "4.4.6",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^0.34.2",
    "vue-tsc": "1.8.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,vue}": [
      "eslint --fix"
    ],
    "*.css": [
      "prettier --write --config .prettierrc"
    ]
  }
}
